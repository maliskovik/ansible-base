network:
    version: 2
    renderer: {{ base_netplan_renderer|default('networkd') }}
    ethernets:
{% for interface in base_network_config %}
        {{ interface.name }}:
{% if interface.mode is match "static" %}
            dhcp4: false
            addresses:
{% for address in interface.addresses %}
            - {{ address }}
{% endfor %}
{% if interface.routes is defined %}
            routes:
{% for route in interface.routes %}
                - to: {{ route.to }}
                  via: {{ route.via }}
{% endfor %}
{% endif %}
            nameservers:
                addresses:
{% for nameserver in interface.nameservers|default(base_nameservers) %}
                - {{ nameserver }}
{% endfor %}
{% if interface.search|default(base_namesevers_search|default(false)) %}
                search:
                - {{ interface.search|default(base_nameserver_search|default('')) }}
{% endif %}
{% elif interface.mode is match "dhcp" %}
            dhcp4: true
            dhcp-identifier: mac
{% endif %}
{% endfor %}
